{
  "default": {
    "description": "Default security profile for all containers",
    "securityOpts": [
      "no-new-privileges:true"
    ],
    "capDrop": ["ALL"],
    "capAdd": [],
    "user": "1000:1000",
    "readOnlyRootfs": true,
    "tmpfs": {
      "/tmp": "rw,noexec,nosuid,size=100m",
      "/var/tmp": "rw,noexec,nosuid,size=50m",
      "/run": "rw,noexec,nosuid,size=50m"
    },
    "sysctls": {
      "net.ipv4.ip_unprivileged_port_start": "0"
    },
    "ulimits": {
      "nofile": {
        "soft": 1024,
        "hard": 2048
      },
      "nproc": {
        "soft": 64,
        "hard": 128
      }
    }
  },
  "challenge": {
    "description": "Security profile for challenge containers with minimal required capabilities",
    "securityOpts": [
      "no-new-privileges:true",
      "seccomp=unconfined"
    ],
    "capDrop": ["ALL"],
    "capAdd": ["CHOWN", "DAC_OVERRIDE"],
    "user": "1000:1000",
    "readOnlyRootfs": false,
    "tmpfs": {
      "/tmp": "rw,noexec,nosuid,size=200m",
      "/var/tmp": "rw,noexec,nosuid,size=100m",
      "/run": "rw,noexec,nosuid,size=100m"
    },
    "sysctls": {
      "net.ipv4.ip_unprivileged_port_start": "0"
    },
    "ulimits": {
      "nofile": {
        "soft": 2048,
        "hard": 4096
      },
      "nproc": {
        "soft": 128,
        "hard": 256
      }
    },
    "resources": {
      "memory": "512m",
      "cpus": "1.0",
      "pidsLimit": 256
    }
  },
  "monitoring": {
    "description": "Security profile for monitoring containers",
    "securityOpts": [
      "no-new-privileges:true"
    ],
    "capDrop": ["ALL"],
    "capAdd": ["NET_BIND_SERVICE"],
    "user": "65534:65534",
    "readOnlyRootfs": true,
    "tmpfs": {
      "/tmp": "rw,noexec,nosuid,size=50m"
    },
    "ulimits": {
      "nofile": {
        "soft": 65536,
        "hard": 65536
      }
    }
  }
}