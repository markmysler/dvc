{
  "name": "cybersec-training-platform",
  "version": "1.0.0",
  "description": "A local web portal for browsing and practicing cybersecurity challenges in containerized environments",
  "main": "index.js",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "start": "podman-compose up -d",
    "stop": "podman-compose down",
    "restart": "npm run stop && npm run start",
    "status": "podman ps",
    "logs": "podman logs -f --tail=100",
    "monitor": "echo 'Grafana: http://localhost:3000' && echo 'Prometheus: http://localhost:9090'",
    "cleanup": "podman system prune -f --filter 'until=24h'",
    "verify": "./scripts/verify.sh",
    "monitoring:start": "./scripts/monitoring-setup.sh start",
    "monitoring:stop": "./scripts/monitoring-setup.sh stop",
    "monitoring:restart": "./scripts/monitoring-setup.sh restart",
    "monitoring:status": "./scripts/monitoring-setup.sh status",
    "monitoring:health": "./scripts/monitoring-health.sh full",
    "challenge:setup": "./scripts/challenge-setup.sh",
    "challenge:build": "./scripts/challenge-setup.sh build",
    "challenge:validate": "./scripts/challenge-setup.sh validate",
    "challenge:test": "./scripts/challenge-setup.sh test",
    "challenge:security-test": "./scripts/security-test.sh",
    "api:start": "./scripts/api-server.sh start",
    "api:stop": "./scripts/api-server.sh stop",
    "api:restart": "./scripts/api-server.sh restart",
    "api:status": "./scripts/api-server.sh status",
    "api:logs": "./scripts/api-server.sh logs",
    "api:dev": "FLASK_ENV=development ./scripts/api-server.sh start",
    "api:test": "curl -X GET http://localhost:5000/api/challenges",
    "api:install": "./scripts/api-server.sh install"
  },
  "keywords": [
    "cybersecurity",
    "training",
    "containers",
    "vulnerabilities",
    "local",
    "podman"
  ],
  "author": "Local Development",
  "license": "MIT",
  "dependencies": {
    "podman-compose": "^1.2.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "local"
  }
}